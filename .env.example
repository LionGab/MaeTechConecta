# ========================================
# MãeTech Conecta - Environment Variables
# ========================================
#
# Copie este arquivo para .env.local e preencha com suas credenciais
# cp .env.example .env.local
#
# IMPORTANTE: Nunca commit o arquivo .env.local no Git!
# ========================================

# ----------------------------------------
# Firebase Configuration
# ----------------------------------------
# Obtenha essas credenciais em:
# https://console.firebase.google.com/ > Project Settings > General > Your apps

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# ----------------------------------------
# Google Genkit AI
# ----------------------------------------
# Obtenha sua chave em:
# https://makersuite.google.com/app/apikey

GOOGLE_GENAI_API_KEY=your_google_genai_api_key_here

# ----------------------------------------
# Stripe (Pagamentos)
# ----------------------------------------
# Obtenha suas chaves em:
# https://dashboard.stripe.com/apikeys

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ----------------------------------------
# Application Settings
# ----------------------------------------

# URL da aplicação (produção)
NEXT_PUBLIC_APP_URL=http://localhost:9002

# Ambiente (development, staging, production)
NODE_ENV=development

# ----------------------------------------
# Instagram OAuth (Opcional)
# ----------------------------------------
# Configure o OAuth do Instagram em:
# https://developers.facebook.com/apps/

INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
INSTAGRAM_REDIRECT_URI=http://localhost:9002/api/auth/callback/instagram

# ----------------------------------------
# Email Service (Opcional)
# ----------------------------------------
# Para envio de emails transacionais

EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email@example.com
EMAIL_SERVER_PASSWORD=your_email_password
EMAIL_FROM=noreply@maetechconecta.com

# ----------------------------------------
# Analytics (Opcional)
# ----------------------------------------

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel
NEXT_PUBLIC_FB_PIXEL_ID=your_fb_pixel_id

# ----------------------------------------
# Feature Flags (Opcional)
# ----------------------------------------

NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_STREAMING=true
NEXT_PUBLIC_ENABLE_FORUM=true
NEXT_PUBLIC_ENABLE_AI_MODERATION=true

# ----------------------------------------
# Development Settings
# ----------------------------------------

# Port para dev server
PORT=9002

# Habilitar debug do Firebase
NEXT_PUBLIC_FIREBASE_DEBUG=false

# Habilitar logs detalhados
NEXT_PUBLIC_ENABLE_LOGGING=false
