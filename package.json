{
  "name": "nossa-maternidade",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "pnpm -C apps/mobile start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "e2e:android": "maestro test e2e/maestro/smoke-flow.yaml",
    "audit": "pnpm audit --audit-level=moderate || true",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.8",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.1.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/react": "~18.3.12",
      "react": "18.3.1"
    }
  }
}
